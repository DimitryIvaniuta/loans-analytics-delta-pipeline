{
  "info": {
    "name": "Loans Analytics Multi-Feed Delta Pipeline",
    "_postman_id": "a3d4a0d1-1111-2222-3333-444444444444",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "asOf",
      "value": "2026-01-22"
    },
    {
      "key": "feeds",
      "value": "LOAN_MASTER,PAYMENT_TRANSACTION"
    },
    {
      "key": "feed",
      "value": "LOAN_MASTER"
    },
    {
      "key": "runId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/actuator/health"
      }
    },
    {
      "name": "List feeds",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/admin/feeds"
      }
    },
    {
      "name": "Run ingest",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/admin/ingest?asOf={{asOf}}&feeds={{feeds}}"
      }
    },
    {
      "name": "List runs",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/admin/runs?limit=50"
      }
    },
    {
      "name": "Get run",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/admin/runs/{{runId}}"
      }
    },
    {
      "name": "Get run feeds",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/admin/runs/{{runId}}/feeds"
      }
    },
    {
      "name": "Download delta CSV",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/delta?asOf={{asOf}}&feed={{feed}}"
      }
    }
  ]
}